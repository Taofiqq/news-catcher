<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="styles.css" rel="stylesheet">
        <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,200;0,300;1,200;1,300&display=swap" rel="stylesheet">
    </head>
    <body>
        <%-  include('./partials/header.ejs') %> 
        <%-  include('./partials/body.ejs') %>
         <div class="card-wrapper">
            <div class="news">
               <% displays.forEach(function(item, index) { %> 
                   <a href="/article/<%- item._id %> " class="news-card">
                    <img src="<%- item.media %>">    
                    <p><%- item.title %> </p> 
                    <p><%- item.summary %> </p> 
                   </a>
               <% }) %> 
            </div>
           
        </div>
        <%-  include('./partials/footer.ejs') %> 
    </body>
</html>